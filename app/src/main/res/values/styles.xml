    <!-- Base application theme. -->

    <style name="Title_TextAppearance_Expend">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#383838</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Title_TextAppearance_collapsed">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#383838</item>
    </style>
    <!--dialog样式-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item><!--  边框-->
        <item name="android:windowIsFloating">true</item><!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>  <!-- 是否半透明 -->
        <item name="android:windowNoTitle">true</item>    <!-- 是否没有标题 -->
        <item name="android:windowBackground">@color/transparent</item> <!-- 背景颜色及透明程度 -->
        <item name="android:backgroundDimEnabled">true</item>      <!-- 是否背景模糊 -->
        <item name="android:backgroundDimAmount">0.4</item><!-- 设置背景模糊的透明度-->
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>
