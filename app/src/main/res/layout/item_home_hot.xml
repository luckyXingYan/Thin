<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/y20"
    android:layout_marginVertical="@dimen/y20"
    android:background="@drawable/shape_rectangle_5_corners_white"
    android:padding="@dimen/y20">

    <ImageView
        android:id="@+id/iv_hot_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y260"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_hot_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_hot_img"
        android:layout_marginTop="@dimen/y10"
        android:text="标题" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_hot_title"
        android:layout_marginTop="@dimen/y10"
        android:text="标题"
        android:textColor="#ff0000" />
</RelativeLayout>
