<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/y20">

        <EditText
            android:id="@+id/tv_input_search"
            android:layout_width="0dp"
            android:layout_height="@dimen/y60"
            android:layout_weight="1"
            android:background="@drawable/shape_rectangle_50_corners_white_stroke_gray"
            android:hint="大家都在搜索“减肥药"
            android:padding="@dimen/y10"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_pos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y20"
            android:drawableLeft="@mipmap/ic_title_back"
            android:drawablePadding="@dimen/y10"
            android:text="北京" />
    </LinearLayout>
</LinearLayout>
