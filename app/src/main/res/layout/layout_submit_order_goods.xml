<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/x30"
    android:layout_marginTop="@dimen/y30"
    android:layout_marginRight="@dimen/x30"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y28"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_cart"
            android:layout_width="@dimen/y140"
            android:layout_height="@dimen/y140"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/y20"
            android:layout_toRightOf="@id/cb_cart_shop"
            android:src="@drawable/shape_rectangle_2_corners_white_stroke_gray" />

        <TextView
            android:id="@+id/iv_cart_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:layout_toRightOf="@id/iv_cart"
            android:text="商品名称"
            android:textColor="@color/color_38"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_cart_goods_name"
            android:layout_marginTop="@dimen/y30"
            android:layout_toRightOf="@id/iv_cart"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_E4382B"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="9999"
                android:textColor="@color/color_E4382B"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="运费  10"
                android:textColor="@color/color_99"
                android:textSize="14sp" />
        </LinearLayout>

    </RelativeLayout>

    <include layout="@layout/layout_line" />
</LinearLayout>
