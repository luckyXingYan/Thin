<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/y30"
        android:layout_marginTop="@dimen/y50"
        android:text="135656666" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y30"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/pwd"
            android:drawablePadding="@dimen/y20"
            android:hint="请输入密码" />

        <RelativeLayout
            android:layout_width="@dimen/y100"
            android:layout_height="@dimen/y100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/off_pwd" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y30"
            android:layout_weight="1"
            android:background="@null"
            android:drawableLeft="@mipmap/pwd"
            android:drawablePadding="@dimen/y20"
            android:hint="请输入密码" />

        <RelativeLayout
            android:layout_width="@dimen/y100"
            android:layout_height="@dimen/y100">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:src="@mipmap/off_pwd" />
        </RelativeLayout>
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <Button
        android:layout_width="@dimen/y280"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/shape_rectangle_50_corners_green"
        android:text="注册并登录"
        android:textColor="@color/white" />
</LinearLayout>
