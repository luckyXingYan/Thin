<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.SecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y200">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/y150"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_add" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y10"
            android:layout_marginTop="@dimen/y50"
            android:layout_toRightOf="@id/iv_head"
            android:text="用户名"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/y10"
            android:layout_toRightOf="@id/iv_head"
            android:text="ID：111"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/y30"
            android:src="@mipmap/ic_title_back" />
    </RelativeLayout>

    <View
        android:id="@+id/view_mine_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:layout_marginTop="@dimen/y10"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/ll_order_state"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tab_home_select_icon"
            android:drawablePadding="@dimen/y10"
            android:gravity="center"
            android:text="待付款"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tab_home_select_icon"
            android:drawablePadding="@dimen/y10"
            android:gravity="center"
            android:text="未使用"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tab_home_select_icon"
            android:drawablePadding="@dimen/y10"
            android:gravity="center"
            android:text="待发货"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tab_home_select_icon"
            android:drawablePadding="@dimen/y10"
            android:gravity="center"
            android:text="待收货"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/tab_home_select_icon"
            android:drawablePadding="@dimen/y10"
            android:gravity="center"
            android:text="已完成"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:id="@+id/view_mine_line2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_my_order"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="我的订单" />

    <View
        android:id="@+id/view_mine_line3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y1"
        android:background="@color/black" />

    <TextView
        android:id="@+id/tv_my_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="地址管理" />

    <TextView
        android:id="@+id/tv00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="注册并登录" />

    <TextView
        android:id="@+id/tv01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="登录" />

    <TextView
        android:id="@+id/tv02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="自测" />

    <TextView
        android:id="@+id/tv03"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="性别" />

    <TextView
        android:id="@+id/tv04"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="目标体重" />

    <TextView
        android:id="@+id/tv05"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="新建地址" />

    <TextView
        android:id="@+id/tv06"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/ic_title_back"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/y20"
        android:paddingRight="@dimen/y30"
        android:text="收银台" />
</LinearLayout>