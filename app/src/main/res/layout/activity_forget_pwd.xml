<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:layout_marginLeft="@dimen/y20"
        android:layout_marginTop="@dimen/y120"
        android:layout_marginRight="@dimen/y20"
        android:background="@null"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1" />

    <include layout="@layout/layout_line" />

    <Button
        android:id="@+id/btn_forget_pwd_next"
        android:layout_width="@dimen/y300"
        android:layout_height="@dimen/y100"
        android:layout_marginTop="@dimen/y250"
        android:layout_marginBottom="@dimen/y20"
        android:background="@drawable/shape_rectangle_50_corners_green"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="17sp" />
</LinearLayout>
