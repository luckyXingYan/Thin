<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y100"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/y20"
            android:gravity="center_vertical"
            android:text="店铺名称" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/y20"
            android:gravity="center_vertical|right"
            android:text="卖家已发货" />
    </LinearLayout>

    <include layout="@layout/layout_line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/y20">

        <ImageView
            android:id="@+id/iv_goods_img"
            android:layout_width="@dimen/y120"
            android:layout_height="@dimen/y120"
            android:layout_marginRight="@dimen/y20"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_goods_img"
            android:text="商品名称" />

        <TextView
            android:id="@+id/tv_goods_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_name"
            android:layout_toRightOf="@id/iv_goods_img"
            android:text="详情详情详情" />

        <TextView
            android:id="@+id/tv_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_detail"
            android:layout_toRightOf="@id/iv_goods_img"
            android:text="详情详情详情" />

        <TextView
            android:id="@+id/tv_goods_freight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_goods_detail"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/tv_goods_price"
            android:gravity="right"
            android:text="运费 10" />
    </RelativeLayout>

    <include layout="@layout/layout_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/y200"
            android:layout_height="@dimen/y100"
            android:background="@drawable/shape_rectangle_50_corners_green"
            android:text="查看物流"
            android:textColor="@color/white" />

        <Button
            android:layout_width="@dimen/y200"
            android:layout_height="@dimen/y100"
            android:layout_marginLeft="@dimen/y20"
            android:layout_marginRight="@dimen/y20"
            android:background="@drawable/shape_rectangle_50_corners_green"
            android:text="确认收货"
            android:textColor="@color/white" />
    </LinearLayout>

    <include layout="@layout/layout_line_20dp" />

</LinearLayout>
